.image-container
  display inline-block
  relative top 0px left 0px
  overflow hidden
  margin 2px
  border-radius 4px
  background-size cover !important
  transform translateZ(0px)


  @media screen and (min-width: 320px)
    width 330px
    height @width
  @media screen and (min-width: 768px)
    width 395px
    height @width
  @media screen and (min-width: 1024px)
    width 380px
    height @width
  @media screen and (min-width: 1920px)
    width 400px
    height @width

  .rating
    absolute top 5px right 5px
    border none
    outline none
    padding 0
    width 30px
    height 30px
    font-size 18px
    background rgba(255, 0, 0, 0.63)
    border-radius 50%
    color #fff
    font-family Verdana
    text-align center
    vertical-align middle
    cursor pointer

  &.disappear
    animation-name hide-show
    animation-duration 200ms
    animation-timing-function linear
    animation-delay 0


@keyframes hide-show {
  0% {
    opacity 1
    transform scale(1, 1)
    background-color none
  }
  50% {
    opacity 0
    transform scale(0.7, 0.7)
    background-color #292929
  }
  100% {
    transform scale(1, 1)
    opacity 1
    background-color none
  }

}
