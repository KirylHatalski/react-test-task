global-reset()

body
html
  height 100%
  background-color #3c3c3c

.wrapper
  display block
  font-size 0
  margin 0 auto
  width 1160px
  @media screen and (max-width: 329px)
    width 320px
  @media screen and (min-width: 330px) and (max-width: 799px)
    width 330px
  @media screen and (min-width: 800px) and (max-width: 1160px)
    width 800px
  @media screen and (min-width: 1161px) and (max-width: 1919px)
    width 1160px
  @media screen and (min-width: 1920px)
    width 2048px
