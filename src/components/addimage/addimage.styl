.add-image
  display inline-block
  relative top 0 left 0
  overflow hidden
  margin 2px
  border-radius 4px
  font-size 30px
  text-align center
  background #292929

  &:hover
    background-color rgba(255, 255, 255, 0.3)
    cursor pointer

  @media screen and (min-width: 320px)
    width 330px
    height @width
  @media screen and (min-width: 768px)
    width 400px
    height @width
  @media screen and (min-width: 1024px)
    width 330px
    height @width
  @media screen and (min-width: 1920px)
    width 400px
    height @width

  &:before
    content ''
    display inline-block
    vertical-align middle
    height 100%
    width 0


  &-plus
    display inline-block
    font-style normal
    font-size 6em
    color #bbb
    vertical-align middle

  &-input
    absolute top 0 right 0
    font-size 99em
    background #fff
    opacity 0
    z-index 2
    cursor pointer
